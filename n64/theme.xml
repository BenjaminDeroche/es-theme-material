<theme>
    <formatVersion>3</formatVersion>
    <include>./../material.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./../art/box.png</path>
			<color>f44336</color>
		</image>

		<image name="logo">
			<path>./n64.svg</path>
        </image>

	</view>

	<view name="basic, detailed, grid">
	
		<image name="logo">
			<path>./logo.svg</path>
			<pos>0.350 0.079</pos>
			<maxSize>0.47 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>
		
		<image name="header" extra="true">
			<path>./../art/box.png</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
			<color>f44336</color>
		</image>

		<image name="footer" extra="true">
			<path>./../art/box.png</path>
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<color>f44336</color>
		</image>
		
		<textlist name="gamelist">
			<selectorColor>f44336</selectorColor>
		</textlist>

	</view>

	<view name="basic">
	</view>

	<view name="detailed">
	</view>
	
</theme>
