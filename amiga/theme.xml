<theme>
    <formatVersion>3</formatVersion>
    <include>./../material.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./../art/box.png</path>
			<color>ff0000</color>
		</image>

		<image name="logo">
			<path>./ami.svg</path>
        </image>
		
		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>
		
	</view>

	<view name="basic, detailed">
	
		<image name="logo">
			<path>./logo.svg</path>
			<pos>0.350 0.0775</pos>
			<maxSize>0.55 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>

		<image name="header" extra="true">
			<path>./../art/box.png</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
			<color>ff0000</color>
		</image>

		<image name="footer" extra="true">
			<path>./../art/box.png</path>
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<color>ff0000</color>
		</image>
	</view>

	<view name="basic">
		<textlist name="gamelist">
			<selectorColor>ff0000</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<fontSize>0.03</fontSize>
			<pos>0.550 0.28</pos>
			<size>0.360 0.50</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>	
	</view>

	<view name="detailed">
		<textlist name="gamelist">
			<selectorColor>ff0000</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<fontSize>0.03</fontSize>
			<pos>0.550 0.28</pos>
			<size>0.360 0.50</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>
	</view>
	
</theme>
