<theme>
    <formatVersion>3</formatVersion>
    <include>./../material.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<color>5a97d0</color>
		</image>

		<image name="logo">
			<path>./logo.svg</path>
		</image>

	</view>

	<view name="basic, detailed, grid">

		<image name="logo">
			<path>./logo.svg</path>
			<color>FFFFFF</color>
		</image>

		<image name="header" extra="true">
			<color>5a97d0</color>
		</image>

		<image name="footer" extra="true">
			<color>5a97d0</color>
		</image>

		<textlist name="gamelist">
			<selectorColor>5a97d0</selectorColor>
		</textlist>

	</view>

	<view name="grid">

		<image name="righter, header, footer" extra="true">
			<color>5a97d0</color>
		</image>

		<image name="logo">
			<path>./logo.svg</path>
		</image>

</view>

</theme>
