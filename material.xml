<theme>
    <formatVersion>3</formatVersion>

	<view name="system">

		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/box.png</path>
		</image>

		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>

	</view>

	<view name="basic, detailed, grid">

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<color>393a3b</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
			<fontSize>0.03</fontSize>
			<size>0.12 0.04</size>
			<pos>1 1</pos>
		</text>

		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
			<color>393a3b</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
			<fontSize>0.03</fontSize>
			<size>0.14 0.04</size>
			<pos>1 1</pos>
		</text>

		<helpsystem name="help">
			<textColor>ffffffff</textColor>
			<iconColor>ffffffff</iconColor>
		</helpsystem>

		<datetime name="md_releasedate, md_lastplayed">
			<color>393a3b</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
			<fontSize>0.03</fontSize>
			<size>0 0.04</size>
			<pos>1 1</pos>
		</datetime>

		<image name="background">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/box.png</path>
			<color>424242</color>
		</image> 

		<image name="header" extra="true">
			<path>./art/box.png</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
		</image>

		<image name="footer" extra="true">
			<path>./art/box.png</path>
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
		</image>

		<image name="logo">
			<pos>0.5 0.03</pos>
			<maxSize>0.55 0.1</maxSize>
		</image>

	</view>

	<view name="basic">

		<textlist name="gamelist">
			<selectorColor>22313f</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<fontPath>./art/Roboto-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>0</forceUppercase>
			<pos>0.025 0.18</pos>
			<size>0.950 0.73</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>

	</view>

	<view name="detailed">

		<textlist name="gamelist">
			<selectorColor>22313f</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>
			<fontPath>./art/Roboto-Regular.ttf</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>0</forceUppercase>
			<pos>0.550 0.28</pos>
			<size>0.360 0.50</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
		</textlist>	

		<image name="md_image">
			<pos>0.30 0.53</pos>
			<maxSize>0.500 0.501</maxSize>
			<origin>0.5 0.5</origin>
		</image>

	</view>

	<view name="grid">

		<image name="logo">
			<origin>0 0</origin>
			<pos>.04 .125</pos>
			<size>0.15 0.75</size>
		</image>

		<image name="lefter" extra="true">
			<path>./art/box.png</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>.16 1</size>
		</image>

		<image name="header" extra="true">
			<path>null</path>
		</image>

		<image name="footer" extra="true">
			<path>null</path>
		</image>

		<text name="md_grid">
		<pos>0.15 0.03</pos>
		<size>.84 .9</size>
		</text>
		
		<text name="md_title">
			<color>424242</color>
		</text>
		
		<ninepatch name="gridtile_background_selected">
			<path>./art/selector.png</path>
			<color>5486f7ff</color>
		</ninepatch>
		
		<ninepatch name="gridtile_background">
			<path>./art/selector.png</path>
			<color>42424200</color>
		</ninepatch>

	</view>

</theme>