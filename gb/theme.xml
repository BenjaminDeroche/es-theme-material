<theme>
    <formatVersion>3</formatVersion>
    <include>./../material.xml</include>

	<view name="system">

		<image name="background" extra="true">
			<color>2e3192</color>
		</image>

		<image name="logo">
			<path>./system.svg</path>
		</image>

	</view>

	<view name="basic, detailed, grid">

		<image name="logo">
			<path>./logo.svg</path>
		</image>

		<image name="header" extra="true">
			<color>2e3192</color>
		</image>

		<image name="footer" extra="true">
			<color>2e3192</color>
		</image>

		<textlist name="gamelist">
			<selectorColor>2e3192</selectorColor>
		</textlist>

	</view>
	
	<view name="grid">
		
		<image name="header" extra="false">
			<color>2e3192</color>
		</image>
	
		<image name="lefter" extra="true">
			<color>2e3192</color>
			<path>./../art/box.png</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>.16 1</size>
		</image>
		
		<image name="logo">
			<path>./logo-vertical.svg</path>
			<origin>0 0</origin>
			<pos>.04 0.2</pos>
			<size>0.15 0.55</size>
		</image>
	
	</view>

</theme>
